doctype html
html
	head
		include includes/head
	body
		h1 upload
		form(action='/upload', method='post', enctype='multipart/form-data')
			input(type='text', name='collection')
			input(type='file', name='csv')
			input(type='submit')

		if lines && file && dgm
			p uploaded #{lines} lines from #{file} into #{dgm}

		else if file && dgm
			p uploaded #{file} into #{dgm}

		if error
			p !{error}